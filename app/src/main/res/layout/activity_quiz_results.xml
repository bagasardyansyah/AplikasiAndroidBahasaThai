<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF9b0000"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".quizResults">

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/pbold"
            android:gravity="center"
            android:text="Skor anda adalah   : 0"
            android:textColor="#FFFFFF"
            android:textSize="32dp" />
    <TextView
        android:id="@+id/correctAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Benar : 0"
        android:gravity="center"
        android:fontFamily="@font/pregular"
        android:textColor="#FFFFFF"
        android:textStyle="italic"
        android:textSize="18dp"/>
    <TextView
        android:id="@+id/incorrectAnswers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salah : 0"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/pregular"
        android:textColor="#FFFFFF"
        android:textStyle="italic"
        android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:weightSum="2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/startNew"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"
                android:background="@drawable/round_back_white_stroke2"
                android:text="Mulai Kuis Baru"
                android:textColor="#000"
                android:textSize="13dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/backToHome"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="7dp"
                android:layout_weight="1"
                android:background="@drawable/round_back_white_stroke2"
                android:text="Kembali Ke Dashboard"
                android:textColor="#000"
                android:textSize="13dp" />

        </LinearLayout>
    </LinearLayout>
